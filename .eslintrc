{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"parser": "babel-eslint",
	"plugins": [
		"react"
	],
	"globals": {
		"process": true
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"quotes": [
			"error",
			"single",
			{	"avoidEscape": true }
		],
		"semi": [
			"error",
			"never"
		],
		"react/jsx-uses-vars": 1,
		"no-unused-vars": [2, {"varsIgnorePattern": "^React$"}],
		"comma-dangle": 2,
		"no-trailing-spaces": 2
	}
}